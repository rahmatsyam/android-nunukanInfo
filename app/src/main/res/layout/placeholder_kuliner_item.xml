<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/activity_padding_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/icon_profil"
        android:layout_height="@dimen/icon_profil"
        android:layout_marginEnd="@dimen/margin_10"
        android:src="@color/placeholder_bg" />


    <View
        android:id="@+id/view_title"
        android:layout_width="100dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toEndOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View

        android:id="@+id/view_number"
        android:layout_width="80dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/view_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toEndOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/view_desc"
        android:layout_width="100dp"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/view_number"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toEndOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/view_desc_list1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/view_desc"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toEndOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />


    <View
        android:id="@+id/view_desc_list2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/view_desc_list1"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toEndOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/view_desc_list3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/view_desc_list2"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toEndOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/view_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:background="@color/placeholder_bg" />


</RelativeLayout>

